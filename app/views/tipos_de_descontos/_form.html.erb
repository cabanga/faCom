<%= simple_form_for(@tipo_de_desconto) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :natureza %>
    <%= f.input :motivo %>
    <%= f.input :percentagem %>
    <%= f.association :empresa %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
