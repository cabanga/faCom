
<%= simple_form_for(@funcionario, html:{ multipart: true }) do |f| %>

  <ul class="nav nav-tabs">
    <li role="presentation " class="active"> <%= f.button :submit, "Guardar", class:"guardar btn-padding" %> </li>
    <li role="presentation"> <%= link_to 'Cancelar', funcionarios_url %> </li>
  </ul>

  <br>

  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <%= f.input :nome, autofocus: true, :input_html => {class:'form-control '}, placeholder: 'ex: Joaquim de Almeida Paulo', label: "Nome do Usuário"  %>
      <br>

      <%= f.input :email, :input_html => {class:'form-control '}, placeholder: 'ex: jose@email.co.ao', label: "Adiciona o e-mail"  %>
      <br>

      <%= f.input :telemovel, :input_html => {class:'form-control '}, placeholder: 'ex: 913747220', label: "Nº de Telemóvel"  %>
      <br>

      <%= f.input :tipo_de_ident, :input_html => {class:'form-control '}, collection: ["Cedula", "Nº B.I", "PassPort", "Outros"], prompt: 'Tipo de Identificação', label: "Tipo de Identificação"  %>
      <br>

      <%= f.input :numero_ident, :input_html => {class:'form-control '}, placeholder: 'ex: 0099KS0001', label: "Nº de Identificação"  %>
      <br>

      <!-- <% if (current_usuario.super_admin?) %>
        <%= f.association :empresa, :input_html => {class:'form-control '}, prompt: 'Adiciona a Empresa', label: false, collection: Empresa.all, label_method: :nome, value_method: :id   %>
      <% end %> -->

    </div>

    <div class="col-xs-12 col-sm-4">

    </div>
  </div>

<% end %>
