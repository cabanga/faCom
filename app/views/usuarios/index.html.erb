<p id="notice"><%= notice %></p>
<%= breadcrumb_index([link_to('Home', root_url), "Usuários"]) %>

<ul class="nav nav-tabs">
  <li role="presentation" class="active"> <%= link_to '<span><i class="fa fa-plus" aria-hidden="true"></i> Usuário</span>'.html_safe, new_usuario_path %> </li>
</ul>
<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>NOME</th>
      <th>TELEMÓVEL</th>
      <th>ÚLTIMO ACESSO ASSOCIADA</th>
      <th>EMPRESA ASSOCIADA</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr data-href="<%= usuario_url(usuario)%>">
        <td><%= usuario.nome %></td>
        <td><%= usuario.telemovel %></td>
        <td><%= usuario.empresa.nome %></td>
        <td><%= usuario.last_sign_in_at.present? ? usuario.last_sign_in_at.strftime("%d/%m/%Y as %I:%M %p") : "nunca entrou"  %></td>
        <td class="text-right"><%= link_to 'Apagar', usuario, method: :delete, data: { confirm: 'Tens a certesa?' }, class: "apagar" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
