<%= simple_form_for(@empresa, html:{ multipart: true }) do |f| %>
  <%= f.error_notification %>

  <ul class="nav nav-tabs">
    <li role="presentation " class="active"> <%= f.button :submit, "Guardar", class:"guardar btn-padding" %> </li>
    <li role="presentation"> <%= link_to 'Cancelar', empresas_url %> </li>
  </ul>

  <br>

  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <%= f.input :nome, autofocus: true, :input_html => {class:'form-control '}, placeholder: 'ex: Shopping Company', label: "Nome da Empresa"  %>
      <br>
      <%= f.input :telemovel, :input_html => {class:'form-control '}, placeholder: 'ex: 913747220', label: "TelemÃ³vel"  %>
      <br>
      <%= f.input :telefone, :input_html => {class:'form-control '}, placeholder: 'ex: 913747220', label: "Outro Contcto"  %>
      <br>
      <% if (current_usuario.super_admin?) %>
        <%= f.input :is_active, label: "Marca para activar a Empresa" %>
      <% end %>

    </div>

    <div class="col-xs-12 col-sm-4">
      <br>
      <%= f.association :cidade, :input_html => {class:'form-control '}, prompt: 'Adiciona a Cidade', label: false, collection: Cidade.all, label_method: :nome, value_method: :id   %>
      <br>
      <%= f.input :email, :input_html => {class:'form-control '}, placeholder: 'ex: company@empresa.co.ao', label: "E-mail"  %>
      <br>
      <%= f.input :logotipo, input_html: { hidden: true, class:"btn btn-primary" }, label: 'Adicionar logotipo' %>

    </div>
  </div>


<% end %>
