<%= breadcrumb_index([link_to('Home', root_url), current_usuario.super_admin? ? "Empresas" : "Configurações"]) %>

<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telemovel</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Estado</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
    <tr data-href="<%= empresa_url(empresa)%>">
        <td><%= empresa.nome %></td>
        <td><%= empresa.telemovel %></td>
        <td><%= empresa.telefone %></td>
        <td><%= empresa.email %></td>
        <td><%= empresa.estado %></td>
        <td><%= empresa.is_active %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Empresa', new_empresa_path %>
