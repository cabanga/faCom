<p id="notice"><%= notice %></p>

<h1>Empresas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telemovel</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Estado</th>
      <th>Is active</th>
      <th>Cidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nome %></td>
        <td><%= empresa.telemovel %></td>
        <td><%= empresa.telefone %></td>
        <td><%= empresa.email %></td>
        <td><%= empresa.estado %></td>
        <td><%= empresa.is_active %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

